<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="8dp"
        android:showDividers="none">

        <!-- Title -->
        <TextView
            android:text="Permit to Operate Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Company Information -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Owner Name"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtOwnerName"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Establishment Name"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEstablishmentName"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Nature of Business"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtNatureOfBusiness"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="TIN"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtTin"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Ownership Type"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtOwnershipType"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Mailing Address"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtMailingAddress"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Plant Address"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPlantAddress"
                android:text="-"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Facility Information -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="PCO Name"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPcoName"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="PCO Accreditation No."
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPcoAccreditation"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Operating Hours"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtOperatingHours"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Total Employees"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtTotalEmployees"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Land Area"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtLandArea"
                android:text="-"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Equipment Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Equipment Name"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEquipmentName"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Fuel Type"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtFuelType"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Emissions Summary"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtEmissionsSummary"
                android:text="-"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Payment Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="Payment Information" android:textStyle="bold" android:textColor="#445B6C" android:layout_marginBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/txtAmount" android:text="₱0.00" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txtPaymentMethod" android:text="Method: -" android:layout_marginBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txtPaymentStatus" android:text="Status: -" android:layout_marginBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txtPaymentTimestamp" android:text="Paid on: -" android:layout_marginBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/txtSubmittedTimestamp" android:text="Submitted on: -" android:textStyle="bold" android:textColor="#2E7D32" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtStatus"
                android:text="Status: Pending"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Feedback Section -->
        <EditText
            android:id="@+id/inputFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter feedback"
            android:padding="8dp"
            android:background="@drawable/text_border"
            android:minHeight="80dp" />
        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnApprove"
                android:text="Approve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF00" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReject"
                android:text="Reject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
