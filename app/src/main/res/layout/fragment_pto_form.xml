<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#445B6C" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_title_gradient"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Permit to Operate (PTO) — Application"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/subHeader"
            android:text="Please fill out all required fields accurately before submitting your application."
            android:textSize="14sp"
            android:textColor="#555"
            android:background="@drawable/text_border"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="A. General Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- A. General Information -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/inputOwnerName"
                android:hint="Name of Owner"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputEstablishmentName"
                android:hint="Name of Establishment"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputMailingAddress"
                android:hint="Mailing Address"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputPlantAddress"
                android:hint="Plant Address"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <TextView
            android:text="B. Company Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- B. Company Information -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">


            <EditText
                android:id="@+id/inputTin"
                android:hint="TIN"
                android:inputType="number"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputOwnershipType"
                android:hint="Nature of Ownership (e.g. Corporation)"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputNatureOfBusiness"
                android:hint="Nature of Business"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputPcoName"
                android:hint="PCO Name"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputPcoAccreditation"
                android:hint="PCO Accreditation No."
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <TextView
            android:text="C. Operational Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- C. Operational Information -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">


            <EditText
                android:id="@+id/inputOperatingHours"
                android:hint="Operating Hours (e.g. 8 hrs/day)"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputTotalEmployees"
                android:hint="Total Employees"
                android:inputType="number"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputLandArea"
                android:hint="Land Area (m²)"
                android:inputType="numberDecimal"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <TextView
            android:text="D. Equipment / Emissions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- D. Equipment / Emissions -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">


            <EditText
                android:id="@+id/inputEquipmentName"
                android:hint="Equipment Name (e.g. Generator Set)"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputFuelType"
                android:hint="Type of Fuel (e.g. Diesel)"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/inputEmissions"
                android:hint="Brief summary (e.g. NOx, SOx, PM...)"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:inputType="textMultiLine"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <!-- E. Supporting Documents -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="E. Supporting Documents"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#445B6C"
                android:background="@drawable/text_border_green"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fileHintText"
                android:text="Upload required documents (PDF/Image format)."
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnUploadFile"
                android:text="Upload File(s)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtFileName"
                android:text="No files selected"
                android:textStyle="italic"
                android:textColor="#666"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitPto"
            android:text="Save and Continue to Review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:enabled="false" />

    </LinearLayout>
</ScrollView>
