<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/backbtn"
            android:contentDescription="Back Button"
            android:layout_gravity="start" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PCO Accreditation"
            android:textSize="33sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:textColor="@android:color/black" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your Pollution Control Officer account."
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:paddingBottom="24dp" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/pcoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PCO Name:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/pcoCertificationNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PCO Certification Number:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:inputType="phone" />

        <!-- File Uploads -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PCO Accreditation Documents:"
            android:paddingTop="12dp"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/uploadAccreditationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose File"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/businessAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Address:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/industryType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry Type:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/wasteOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waste Output:"
            android:background="@drawable/input_field"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textSize="18sp"
            android:textColor="@color/highlight"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>
</ScrollView>
