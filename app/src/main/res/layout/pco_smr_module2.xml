<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.businesses.smr.COMP_Module2">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="View notifications"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Module Title -->
            <TextView
                android:id="@+id/moduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_primary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Module 2: RA 6969"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Total Solid Waste -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Total Solid Waste (kg):"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/solidWasteInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter total solid waste"
                android:inputType="numberDecimal"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Storage Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Storage Method:"
                android:textColor="@color/text_primary" />

            <Spinner
                android:id="@+id/storageMethodSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Hazardous Waste -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Hazardous Waste (kg):"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/hazardousWasteInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter hazardous waste"
                android:inputType="numberDecimal"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Type of Hazardous Waste -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Type of Hazardous Waste:"
                android:textColor="@color/text_primary" />

            <Spinner
                android:id="@+id/typeHazardousWasteSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Date of Transport -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Date of Transport:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/dateTransportInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="date"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:drawableEnd="@drawable/ic_calendar" />

            <!-- Waste Manifest ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Waste Manifest ID:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/manifestIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter manifest ID"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Disposal Facility Details -->
            <TextView
                android:id="@+id/disposalFacilityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disposal Facility Details"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/input_field" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Name:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/disposalNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter name"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Address:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/disposalAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter address"
                android:background="@drawable/input_field"
                android:padding="12dp" />

            <!-- Upload Certificate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Upload Waste Disposal Certificates:"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadCertificateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload File"
                android:backgroundTint="@color/button_primary"
                app:cornerRadius="8dp"
                android:padding="12dp"
                android:layout_marginTop="8dp" />

            <!-- Save Page (Right aligned) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/savePageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Page"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="8dp"
                    android:padding="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
