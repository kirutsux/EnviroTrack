<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/backbtn"
            android:contentDescription="Back"
            android:layout_marginBottom="24dp" />

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register your company"
            android:textSize="18sp"
            android:textColor="@color/secondary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Form Fields -->
        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Company Name"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/business_address"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Business Address"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/industry_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Industry Type"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/registration_number"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Company Registration Number"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/waste_output"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Waste Output"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/generator_capacity"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Generator Capacity"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/production_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Production Type"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/resource_consumption"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Resource Consumption"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Location"
            android:background="@drawable/input_field"
            android:paddingStart="16dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="32dp" />

        <!-- File Upload -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/upload_company_id"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Company ID"
                android:textColor="@color/text_primary"
                android:background="@drawable/input_field" />

            <Button
                android:id="@+id/upload_government_id"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Government ID"
                android:textColor="@color/text_primary"
                android:background="@drawable/input_field"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Register Button -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="REGISTER"
            android:textColor="@color/button_primary"
            android:background="@drawable/rounded_button"
            android:textStyle="bold" />

        <!-- Footer -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/login_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Here"
                android:textColor="@color/accent"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
