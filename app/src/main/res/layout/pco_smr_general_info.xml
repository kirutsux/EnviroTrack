<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.businesses.smr.COMP_MGeneral_Info">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="View notifications"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Module Title -->
            <TextView
                android:id="@+id/modulesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_primary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Module 1: General Information"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Company Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Company Name:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/companyNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter company name"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Company name input" />

            <!-- Facility Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Facility Name:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/facilityNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter facility name"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Facility name input" />

            <!-- Industry Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Industry Type:"
                android:textColor="@color/text_primary" />

            <Spinner
                android:id="@+id/industryTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:contentDescription="Select industry type" />

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Address:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tap to edit"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Address input" />

            <!-- Responsible Officer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Responsible Officer:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/officerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter responsible officer"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Responsible officer input" />

            <!-- Designation/Position -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Designation/Position:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/designationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter designation"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Designation input" />

            <!-- Contact Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Contact Number:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/contactNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter contact number"
                android:inputType="phone"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Contact number input" />

            <!-- Operating Hours -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Operating Hours:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/operatingHoursInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter operating hours"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Operating hours input" />

            <!-- Year Established -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Year Established:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/yearEstablishedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter year"
                android:inputType="number"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Year established input" />

            <!-- Certifications -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Certifications for this facility:"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadCertificationsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload File"
                android:backgroundTint="@color/button_primary"
                app:cornerRadius="8dp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Upload certifications file" />

            <!-- Save Page (Right aligned) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/savePageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Page"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="8dp"
                    android:padding="12dp"
                    android:contentDescription="Save page data" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
