<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient_purple_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="Certificate of Non-Coverage (CNC)"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_title_gradient"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Submitted Applications -->
    <TextView
        android:text="Your Submitted Applications"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_title_gradient"
        android:padding="10dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNoApplications"
        android:text="You have no submitted applications yet."
        android:textColor="#666"
        android:textSize="14sp"
        android:background="@drawable/text_border"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCncList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <!-- Floating Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddCnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        android:contentDescription="Add CNC"
        android:src="@drawable/ic_add" />
</LinearLayout>
