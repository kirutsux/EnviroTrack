<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="8dp"
        android:showDividers="none">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PCO Accreditation Application Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- PCO Info Box -->

        <!-- Uploaded Files -->
        <LinearLayout
            android:id="@+id/layoutPcoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bordered_box"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Accreditation Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accreditation Number"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAccreditationNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Company Affiliation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company / Affiliation"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCompanyAffiliation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Position -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position / Designation"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPositionDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Educational Background -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educational Background"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEducationalBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Experience -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience in Environmental Management"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtExperienceInEnvManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Date Submitted -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Submitted"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubmittedTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="-"
                android:textSize="16sp" />

            <!-- Status -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#555555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUploadedFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Uploaded Documents"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/linkCertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“„ View Certificate"
                android:textColor="@color/link_blue"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/linkGovernmentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸªª View Government ID"
                android:textColor="@color/link_blue"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/linkTrainingCertificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ“ View Training Certificate"
                android:textColor="@color/link_blue"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Feedback Box -->
        <EditText
            android:id="@+id/inputFeedback"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:hint="Enter feedback (optional)"
            android:padding="8dp"
            android:textSize="15sp"
            android:background="@drawable/text_border" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Approve"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
