<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".businesses.COMP_LateSubmissionDetails">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack Logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notification Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Page Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Late Submission Penalty Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/primary"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_light"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Report Period -->
            <TextView
                android:id="@+id/txtReportPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Period: Q3 2025"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Submission Date -->
            <TextView
                android:id="@+id/txtSubmissionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submission Date: August 10, 2025"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Due Date -->
            <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date: June 30, 2025"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Penalty Rate -->
            <TextView
                android:id="@+id/txtPenaltyRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penalty Rate: PHP 1,000"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Total Fine -->
            <TextView
                android:id="@+id/txtTotalFine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Fine: PHP 1,000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:contentDescription="Total fine amount: PHP 1,000"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="16dp" />

            <!-- Payment Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRedirectPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redirect to Payment"
                    app:backgroundTint="@color/button_primary"
                    android:textColor="@color/button_text"
                    app:cornerRadius="8dp"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:contentDescription="Button to redirect to payment page" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>