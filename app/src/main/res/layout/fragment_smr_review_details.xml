<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:text="SMR Review Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Module 1: General Info -->
        <TextView
            android:text="Module 1: General Information"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGeneralInfo"
            android:text="-"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Module 2: Hazardous Waste -->
        <TextView
            android:text="Module 2: Hazardous Waste"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvHazardousWastes"
            android:text="-"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Add similar sections for Modules 3-5 if needed -->
        <!-- Module 3: Water Pollution -->
        <TextView
            android:text="Module 3: Water Pollution"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvWaterPollution"
            android:text="-"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Module 4: Air Pollution -->
        <TextView
            android:text="Module 4: Air Pollution"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAirPollution"
            android:text="-"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Module 5: Others -->
        <TextView
            android:text="Module 5: Others"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvOthers"
            android:text="-"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- AI Analysis Section -->
        <TextView
            android:text="@string/ai_analysis_recommendations"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAiAnalysis"
            android:text="Loading AI analysis..."
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:text="Back to Dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#445B6C"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnApprove"
                android:text="Approve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF00" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReject"
                android:text="Reject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>