<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#D6EAF8"
    android:radius="16dp"
    android:elevation="3dp"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/imgClient"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_round_shape" />

        <!-- Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtServiceTitle"
                android:text="Waste Disposal for Client A"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCompanyName"
                android:text="McDonald's"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDateCompleted"
                android:text="Completed: Feb 10, 2025"
                android:textColor="#008000"
                android:textStyle="italic"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- View Report Button -->
        <Button
            android:id="@+id/btnViewReport"
            android:text="View Report"
            android:textSize="12sp"
            android:padding="6dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2ECC71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
