<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Step 3: Payment of Fees"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Please review the fee details and proceed with payment."
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Fee Summary -->
        <TextView
            android:text="Processing Fee: ₱1,000.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Environmental Fee: ₱500.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Total: ₱1,500.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Payment Method -->
        <TextView
            android:text="Select Payment Method:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/paymentMethodGroup"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/paymentGcash"
                android:text="GCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/paymentCard"
                android:text="Credit/Debit Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/paymentBank"
                android:text="Bank Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <!-- Proceed Button -->
        <Button
            android:id="@+id/btnProceedPayment"
            android:text="Proceed to Payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
