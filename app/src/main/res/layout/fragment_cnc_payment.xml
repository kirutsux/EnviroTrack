<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".view.businesses.cnc.CncPaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                app:tint="#445B6C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNC - Payment"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Payment Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="16dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Fee:"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtFeeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±1,200.00"
                android:textSize="20sp"
                android:textColor="#445B6C"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/txtPaymentDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay securely using Stripe."
                android:textColor="#666666"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Pay Button -->
        <Button
            android:id="@+id/btnPayStripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay with Card (Stripe)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#445B6C"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
