<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollModule1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:padding="16dp"
    tools:context="com.ecocp.capstoneenvirotrack.view.businesses.smr.Module1GeneralInfoFragment">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTitleGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitleGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill the facility details"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Establishment / Facility -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEstablishment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEstablishmentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Establishment / Facility Name"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street, Barangay, City / Municipality"
                        android:inputType="textPostalAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Owner / Company -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOwner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Owner / Company"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone / Email row -->
                <LinearLayout
                    android:id="@+id/llContactRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Type of Business (simple) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTypeOfBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTypeOfBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Type of Business / Industry"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Responsible Officers title -->
                <TextView
                    android:id="@+id/tvResponsibleHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Responsible Officer(s)"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <!-- CEO block -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCeo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCeoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CEO / Managing Head Name"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/llCeoContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCeoPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCeoPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CEO Phone"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCeoEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCeoEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="CEO Email"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- PCO block -->
                <TextView
                    android:id="@+id/tvPcoHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pollution Control Officer (PCO)"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPcoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PCO Name"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/llPcoContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPcoPhone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPcoPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PCO Phone"
                            android:inputType="phone" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPcoEmail"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPcoEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PCO Email"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- PCO Accreditation # and Legal Classification -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPcoAccNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcoAccNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PCO Accreditation No."
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilLegalClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLegalClassification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Legal Classification (e.g., private domestic corp.)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/SaveModule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Module"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <!-- Next button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextModule2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Module 2"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>