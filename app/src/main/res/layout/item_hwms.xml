<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWasteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used Oil"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 150 liters"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTransporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transporter: ABC Transport"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTsdFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TSD Facility: GreenCycle Co."
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvPermitNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permit No: 12345"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvPaymentStatuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment: Unpaid"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
