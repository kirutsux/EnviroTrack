<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#1E1E2F"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAppId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID: 0591 (R11)"
                android:textColor="#BB86FC"
                android:textStyle="bold"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Application Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECOLAND PETRON SERVICE CENTER"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingTop="4dp" />

        <!-- Applicant -->
        <TextView
            android:id="@+id/tvApplicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John C. Dela Cruz II"
            android:textSize="13sp"
            android:textColor="#B0B0B0"
            android:paddingBottom="6dp" />

        <!-- Detail Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_gray"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tvForwardedTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forwarded to: Melvin M. Dapitanon"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: Sept 28, 2021"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type: Renewal"
                android:textColor="#9FA8DA"
                android:textSize="13sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Submitted"
                android:textColor="#FFB74D"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingVertical="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
