<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="space_between"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAppId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 0591 (R11)"
                android:textStyle="bold"
                android:textColor="#333333" />

            <ImageView
                android:id="@+id/btnMore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:tint="#888888" />
        </LinearLayout>

        <!-- Application Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECOLAND PETRON SERVICE CENTER"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:paddingTop="4dp" />

        <!-- Applicant -->
        <TextView
            android:id="@+id/tvApplicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John C. Dela Cruz II"
            android:textSize="13sp"
            android:textColor="#757575"
            android:paddingBottom="6dp" />

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvForwardedTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Melvin M. Dapitanon"
                android:textSize="13sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/tvUpdated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sept 28, 2021"
                android:textSize="13sp"
                android:textColor="#555555"
                android:gravity="start" />

            <!-- Badges Row -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_blue"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="Renewal"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginEnd="6dp"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge_orange"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="Submitted"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
