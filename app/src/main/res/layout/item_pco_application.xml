<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F8FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAppId"
                android:text="ID: 0591 (R11)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- STATUS BADGE -->
            <TextView
                android:id="@+id/tvStatus"
                android:text="Pending"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_status_badge"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <!-- 🏢 Application Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECOLAND PETRON SERVICE CENTER"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E2A35"
            android:paddingTop="4dp" />

        <!-- 👤 Applicant -->
        <TextView
            android:id="@+id/tvApplicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John C. Dela Cruz II"
            android:textSize="13sp"
            android:textColor="#5A6D85"
            android:paddingBottom="6dp" />

        <!-- 📋 Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_gray"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tvForwardedTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forwarded to: Melvin M. Dapitanon"
                android:textColor="#3E4C59"
                android:textSize="13sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: Sept 28, 2021"
                android:textColor="#3E4C59"
                android:textSize="13sp"
                android:paddingVertical="4dp" />

            <TextView
                android:id="@+id/tvIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issued: -"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expires: -"
                android:textSize="12sp"
                android:textColor="#555"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
