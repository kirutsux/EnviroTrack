<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/white"
    tools:context="com.ecocp.capstoneenvirotrack.view.all.Feedback">

    <!-- 🟩 Top App Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ripple_background"
                android:src="@drawable/backbtn"
                android:contentDescription="@string/back_button_description"
                android:layout_marginEnd="8dp"
                android:padding="6dp"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 🗣️ Feedback Prompt -->
    <TextView
        android:id="@+id/tvPrompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/feedback_prompt"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_primary"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 📝 Feedback Input Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvCharCount">

        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/feedback_hint"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="8"
            android:maxLength="500"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            tools:text="This is my feedback..." />
    </androidx.cardview.widget.CardView>

    <!-- 🔢 Character Counter -->
    <TextView
        android:id="@+id/tvCharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback_char_count"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/gray"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/feedbackCard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0/500" />

    <!-- ✅ Publish Button -->
    <Button
        android:id="@+id/btnPublish"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button_green"
        android:backgroundTint="@null"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:text="@string/publish_button"
        android:textColor="@color/button_text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvCharCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:enabled="true" />

</androidx.constraintlayout.widget.ConstraintLayout>