<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="8dp"
        android:showDividers="none">

        <!-- Title -->
        <TextView
            android:text="Permit to Transport Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- HWMS Section -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="HWMS Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView android:text="Company Name" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtHwmsCompanyName" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Company Address" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtHwmsCompanyAddress" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Status" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtHwmsStatus" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <!-- HWMS Files Container -->
            <TextView android:text="Uploaded Files" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_marginTop="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <LinearLayout
                android:id="@+id/hwmsFilesContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Transport Booking Section -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Transport Booking Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView android:text="Booking ID" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTransportBookingId" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Status" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTransportStatus" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Origin" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTransportOrigin" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Quantity" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTransportQuantity" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Service Provider" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTransportProvider" android:text="-" android:textSize="16sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <!-- Transport Files Container -->
            <TextView android:text="Uploaded Files" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_marginTop="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <LinearLayout
                android:id="@+id/transportFilesContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- TSD Booking Section -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TSD Booking Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView android:text="Booking ID" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTsdBookingId" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Status" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTsdStatus" android:text="-" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <TextView android:text="Amount" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/txtTsdAmount" android:text="â‚±0" android:textSize="16sp" android:layout_marginBottom="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

            <!-- TSD Files Container -->
            <TextView android:text="Uploaded Files" android:textStyle="bold" android:textColor="#555555" android:textSize="14sp" android:layout_marginTop="6dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <LinearLayout
                android:id="@+id/tsdFilesContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Feedback Section -->
        <EditText
            android:id="@+id/inputFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter feedback"
            android:padding="8dp"
            android:background="@drawable/text_border"
            android:minHeight="80dp" />

        <!-- Upload Certificate Button -->
        <Button
            android:id="@+id/btnUploadCertificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Upload Certificate"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:padding="10dp" />

        <!-- Selected file TextView -->
        <TextView
            android:id="@+id/tvSelectedFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            android:textSize="14sp" />

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnApprove"
                android:text="Approve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF00" />

            <View
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReject"
                android:text="Reject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
