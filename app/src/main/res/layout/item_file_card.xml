<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    app:strokeColor="@color/divider_light"
    app:strokeWidth="1dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <!-- 📄 File Icon -->
        <ImageView
            android:id="@+id/ivFileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_files"
            android:contentDescription="File Icon"
            app:tint="@color/primary" />

        <!-- 📝 File Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hazwaste_report.pdf"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvFileCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hazardous Waste Manifest"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- 👁 View Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            app:icon="@drawable/ic_visibility_on"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
