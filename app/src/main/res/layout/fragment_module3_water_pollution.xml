<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollModule3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:padding="16dp"
    tools:context=".view.businesses.smr.Module3WaterPollutionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card for Module 3 Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitleModule3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 3: P.D. 984 - Water Pollution"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitleModule3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report on Wastewater Generation, Cost of Treatment, and WTP Discharge"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Section A: Wastewater Data -->
                <TextView
                    android:id="@+id/tvSectionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Wastewater Data"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="12dp" />

                <!-- Wastewater Fields -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDomesticWastewater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Domestic Wastewater (m³/day)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputProcessWastewater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Process Wastewater (m³/day, recycled)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputCoolingWater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cooling Water (m³/day)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputOtherSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Other Wastewater Source (m³/day)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWashEquipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Wash Equipment"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWashFloor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Wash Floor"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section B: Cost of Treatment -->
                <TextView
                    android:id="@+id/tvSectionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Record of Cost of Treatment"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <!-- Month 1 Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputEmployees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Employees (Month 1)"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputCostEmployees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Employee Cost (₱)"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputUtilityCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Utility Costs of WTP (₱)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNewInvestmentCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cost of New/Add Investments (₱)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section C: WTP Discharge -->
                <TextView
                    android:id="@+id/tvSectionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. WTP Discharge Location"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <!-- Outlet Fields -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputOutletNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Outlet Number"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputOutletLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Outlet Location"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWaterBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Receiving Water Body"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section D: Detailed Report of Wastewater Characteristics -->
                <TextView
                    android:id="@+id/tvSectionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Detailed Report of Wastewater Characteristics"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date (e.g. 1/15/16)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputFlow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Effluent Flow Rate (m³/day)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputBod1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="BOD (mg/L)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTss1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TSS (mg/L)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputColor1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Color"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPh1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="pH"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputOilGrease1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Oil and Grease (mg/L)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTempRise1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Temperature Rise (°C)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dissolved Oxygen (mg/L)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AddWaterPollution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Water Pollution Entry"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/SaveModule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Module"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextModule4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Air Pollution"
                    android:layout_marginTop="20dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
