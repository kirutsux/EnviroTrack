<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="18dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtCompanyName"
            android:text="ABC Manufacturing Co."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_height="40dp"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/txtEstablishmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Establishment Name"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtPcoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PCO Name"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtNatureOfBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nature of Business"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtDate"
            android:text="Date Established: 2025-10-10"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="2dp"
            android:layout_height="40dp"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/txtStatus"
            android:text="Status: Pending"
            android:textStyle="italic"
            android:textColor="#009688"
            android:paddingTop="4dp"
            android:layout_height="40dp"
            android:layout_width="match_parent"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
