<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollModule4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:padding="16dp"
    tools:context=".view.businesses.smr.Module4AirPollutionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card for Module 4 Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitleModule4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 4: R.A. 8749 - Air Pollution"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitleModule4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report on Process Equipment, Fuel Burning, and Pollution Control Facilities"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Section A: Process Equipment -->
                <TextView
                    android:id="@+id/tvSectionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Process Equipment Summary"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEquipmentName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Equipment Name / Type"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHoursOperation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="# of Hours of Operation (This Quarter)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section B: Fuel Burning Equipment -->
                <TextView
                    android:id="@+id/tvSectionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Fuel Burning Equipment"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFuelEquipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Equipment Name / Type"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFuelUsed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fuel Used (e.g. Diesel, LPG)"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFuelQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fuel Consumed (L)"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFuelHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="# of Hours Operation"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Section C: Pollution Control Facilities -->
                <TextView
                    android:id="@+id/tvSectionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Pollution Control Facilities"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcfName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Facility Name / Description"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcfLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPcfHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="# of Hours of Operation"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section D: Cost of Treatment -->
                <TextView
                    android:id="@+id/tvSectionD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. Cost of Treatment (This Quarter)"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTotalElectricity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Electricity Consumption (kWh)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etOverheadCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Administrative and Overhead Costs (â‚±)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section E: Air Emission Characteristics -->
                <TextView
                    android:id="@+id/tvSectionE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E. Detailed Report of Air Emission Characteristics"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmissionDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description / Location of PCF"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmissionDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFlowRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Flow Rate (Ncm/day)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CO (mg/Ncm)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNOx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="NOx (mg/Ncm)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etParticulates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Particulates (mg/Ncm)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddAirPollution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Air Pollution Entry"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/SaveModule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Module"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextModule5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Solid Waste"
                    android:layout_marginTop="20dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
