<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_default"
    tools:context=".businesses.COMP_OPMS">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack Logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notification Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Banner -->
    <TextView
        android:id="@+id/bannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Online Permitting Management System"
        android:textColor="@color/white"
        android:background="@color/background_redish"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="OPMS Banner" />

    <!-- Card Container -->
    <GridLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        app:layout_constraintTop_toBottomOf="@id/bannerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spacer">

        <!-- Card 1: OPMS Overview -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@color/card_teal"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OPMS Overview"
                android:textColor="@color/white"
                android:background="@drawable/card_header_gray"
                android:padding="8dp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_profile"
                    android:contentDescription="User" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PCO: Maria Santos"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company: Dunkin Donut"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Compliance"
                android:textColor="@color/white"
                android:background="@drawable/status_chip"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Compliance Status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Validity Period:\nJan 1, 2025 – Dec 31, 2025"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Renew Permit"
                    android:textSize="10sp"
                    style="@style/CompactPrimaryButton"
                    android:gravity="center"
                    android:contentDescription="Renew Permit Button" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apply for Permit"
                    android:textSize="8sp"
                    style="@style/CompactPrimaryButton"
                    android:gravity="center"
                    android:contentDescription="Apply for Permit Button" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card 2: Status Tracking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@color/card_blue"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Tracking"
                android:textColor="@color/white"
                android:background="@drawable/card_header_gray"
                android:padding="8dp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_profile"
                    android:contentDescription="User" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PCO: Maria Santos"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company: Dunkin Donut"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Compliance"
                android:textColor="@color/white"
                android:background="@drawable/status_chip"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Compliance Status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permit Type: Discharge Permit\nApplication No: 12345\nValidity: Jan 1, 2025 – Dec 31, 2025"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:textSize="10sp"
                style="@style/CompactPrimaryButton"
                android:layout_marginTop="8dp"
                android:contentDescription="View Details Button" />
        </LinearLayout>
    </GridLayout>

    <!-- Spacer View -->
    <View
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
