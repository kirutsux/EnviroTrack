<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:text="Review and Submit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Please review all details before submitting your discharge permit application."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Company Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Company Information"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCompanyReview"
                android:text="Company Name, Address, PCO Info..."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Discharge Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Discharge Details"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDischargeReview"
                android:text="Receiving Body, Volume, Method..."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Payment Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Payment Information"
                android:textStyle="bold"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPaymentReview"
                android:text="â‚±1,500 - Stripe - Pending"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEditInfo"
                android:text="Edit Information"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#9E9E9E"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:radius="12dp" />

            <Button
                android:id="@+id/btnSubmitApplication"
                android:text="Submit Application"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:radius="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
