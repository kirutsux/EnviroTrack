<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    tools:context=".businesses.COMP_Hazwaste_Manifest">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack Logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notification Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Title Banner -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hazwaste Manifest System"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/gradient_primary"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:contentDescription="Hazwaste Manifest System Title" />

    <!-- Card Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- Review Waste Management Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            app:cardBackgroundColor="@color/card_teal"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardStatus"
            app:layout_constraintWidth_percent="0.48"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Card Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Review Waste Management"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/header_background"
                    android:padding="6dp" />

                <!-- User Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sample_profile"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:contentDescription="User Profile Image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PCO: Maria Santos"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company: Dunkin' Donuts"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Compliance Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Compliance"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/badge_compliance"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <!-- Validity -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Validity Period:\nJan 1, 2026 - Dec 31, 2027"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp" />

                <!-- View Details -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewDetails1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    app:backgroundTint="@color/button_primary"
                    android:textColor="@color/button_text"
                    app:cornerRadius="8dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Tracking Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            app:cardBackgroundColor="@color/card_blue"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toEndOf="@id/cardReview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Card Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Tracking"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/header_background"
                    android:padding="6dp" />

                <!-- User Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sample_profile"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"
                        android:contentDescription="User Profile Image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PCO: Maria Santos"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company: Dunkin' Donuts"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Compliance Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Compliance"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/badge_compliance"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <!-- Permit Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permit Type: Discharge Permit\nApplication No: 12345\nDate Approved: Jan 1, 2026\nValidity: Jan 1, 2026 - Dec 31, 2027"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="6dp" />

                <!-- View Details -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewDetails2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    app:backgroundTint="@color/button_primary"
                    android:textColor="@color/button_text"
                    app:cornerRadius="8dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/black"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:contentDescription="Add New Hazwaste Manifest" />

</androidx.constraintlayout.widget.ConstraintLayout>
