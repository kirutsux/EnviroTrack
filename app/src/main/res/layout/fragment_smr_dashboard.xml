<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient_purple_blue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="16dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_title_gradient"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/backbtn"
            android:contentDescription="Back Button"
            android:padding="4dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:text="Self Monitoring Report"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <!-- Submitted Applications Header -->
        <TextView
            android:text="Your Submitted Applications"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_title_gradient"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- No Applications Text -->
        <TextView
            android:id="@+id/txtNoApplications"
            android:text="You have no submitted applications yet."
            android:textColor="#666"
            android:textSize="14sp"
            android:background="@drawable/text_border"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView for submitted SMRs -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSmrList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <!-- Module Progress Section -->
    <TextView
        android:text="Current SMR Module Progress"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/moduleProgressContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <!-- Module 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardModule1"
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvModule1Title"
                    android:text="Module 1: General Information"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressModule1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvModule1Status"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Module 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardModule2"
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvModule2Title"
                    android:text="Module 2: Water Pollution"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressModule2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvModule2Status"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Module 3 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardModule3"
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvModule3Title"
                    android:text="Module 3: Air Pollution"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressModule3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvModule3Status"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Module 4 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardModule4"
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvModule4Title"
                    android:text="Module 4: Hazardous Waste"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressModule4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvModule4Status"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Module 5 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardModule5"
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvModule5Title"
                    android:text="Module 5: Others"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressModule5"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvModule5Status"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Floating Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddSmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="12dp"
        android:contentDescription="Add SMR"
        android:src="@drawable/ic_add" />
</LinearLayout>
</ScrollView>
