<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:text="Review and Submit"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#445B6C"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Please review all information before submitting your Certificate of Non-Coverage (CNC) application."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Company & Project Information -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Company and Project Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCncCompanyReview"
                android:text="Company, Project, TIN, Address..."
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- PCO & Project Details -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="PCO and Project Details"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCncProjectReview"
                android:text="PCO Name, Project Type, Location, Area..."
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Environmental Information -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Environmental Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCncEnvironmentalReview"
                android:text="Environmental Description, Resources, Mitigation..."
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Payment Information -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bordered_box"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Payment Information"
                android:textStyle="bold"
                android:textColor="#445B6C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCncPaymentReview"
                android:text="â‚±500 - Stripe - Pending"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCncEditInfo"
                android:text="Edit Information"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#9E9E9E"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnCncSubmitApplication"
                android:text="Submit Application"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#445B6C"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
