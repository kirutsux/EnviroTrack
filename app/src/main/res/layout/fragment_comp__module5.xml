<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.businesses.smr.COMP_Module5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="View notifications"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Module Title -->
            <TextView
                android:id="@+id/moduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_primary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Module 5: PD 1586"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Project Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Project Name:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter project name"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Project name input" />

            <!-- CNC Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CNC Number:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/cncNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter CNC number"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="CNC number input" />

            <!-- Date Issued -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date Issued:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/dateIssued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Select date"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Date issued input" />

            <!-- Project Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Project Description:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/projectDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter description"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Project description input" />

            <!-- Monitoring Plan Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Monitoring Plan Details:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/monitoringPlanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter monitoring details"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:contentDescription="Monitoring plan details input" />

            <!-- Compliance Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Compliance Status:"
                android:textColor="@color/text_primary" />

            <Spinner
                android:id="@+id/complianceStatusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:contentDescription="Select compliance status" />

            <!-- Submission of Reports -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Submission of Environmental Monitoring Reports:"
                android:textColor="@color/text_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadMonitoringReportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_primary"
                android:text="Upload File"
                app:cornerRadius="8dp"
                android:padding="12dp"
                android:contentDescription="Upload monitoring report" />

            <!-- Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Save Page"
                    android:backgroundTint="@color/button_primary"
                    app:cornerRadius="8dp"
                    android:padding="12dp"
                    android:contentDescription="Save page data" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>