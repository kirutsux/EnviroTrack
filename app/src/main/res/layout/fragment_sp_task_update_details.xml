<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp"
    tools:context=".view.serviceprovider.SP_TaskUpdateDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Card: Company Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgCompanyLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/dunkin"
                    android:scaleType="centerCrop"
                    android:contentDescription="Company logo"
                    android:background="@drawable/circle_bg"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dunkin Donuts"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/txtCompanyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A. S. Fortuna St, Mandaue City, Cebu"
                        android:textColor="#616161"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/txtTaskRef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ref: #SR-2025-0012"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>

                <!-- Status Pill (non-edit) -->
                <TextView
                    android:id="@+id/txtStatusPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Progress"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/rounded_status_bg"
                    android:contentDescription="Current status"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Documents / Task Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Documents  Task Info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <!-- Task Name (editable) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Name"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/edtTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:text="Collect Waste Sample"
                    android:textColor="#212121"
                    android:inputType="text"/>

                <!-- Deadline (tap to edit / date picker) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtDeadline"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="Nov 22, 2025 â€¢ 05:00 PM"
                        android:textColor="#212121"/>

                    <ImageButton
                        android:id="@+id/btnPickDate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_calendar"
                        android:backgroundTint="@android:color/transparent"
                        android:contentDescription="Pick date"
                        android:layout_marginStart="8dp"
                        app:tint="#1F3A4A" />
                </LinearLayout>

                <!-- Status Dropdown -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/status_options"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp"/>

                <!-- Notes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes / Instructions"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <EditText
                    android:id="@+id/edtNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:gravity="top"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:text="Please bring proper PPE. Gate codes are at the reception."
                    android:textColor="#212121"
                    android:inputType="textMultiLine"/>

                <!-- Attachments header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attachments"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtAttachmentHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(photos, reports, PDFs)"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Attachment row: preview + add button (NO RecyclerView) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Preview thumbnail (first attachment) -->
                    <ImageView
                        android:id="@+id/imgAttachmentPreview"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_attachment"
                        android:contentDescription="Attachment preview"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_field"/>

                    <!-- Simple container for attachments (NO RecyclerView) -->
                    <LinearLayout
                        android:id="@+id/attachmentContainer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtNoAttachments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No attachments added"
                            android:textColor="#888888"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Upload button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#2ECC71"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Upload progress (hidden by default) -->
                <ProgressBar
                    android:id="@+id/progressUpload"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:progress="50"/>

                <!-- Action buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#1F3A4A"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="8dp"
                        app:strokeColor="#C0392B"
                        app:strokeWidth="1dp"
                        android:textColor="#C0392B"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
