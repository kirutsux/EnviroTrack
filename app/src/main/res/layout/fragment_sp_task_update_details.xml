<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp"
    tools:context=".view.serviceprovider.SP_TaskUpdateDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Card: Company & Booking Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical">

                <!-- KEEP Company Logo -->
                <ImageView
                    android:id="@+id/imgCompanyLogo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dunkin Donuts"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/txtCompanyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A. S. Fortuna St, Mandaue City, Cebu"
                        android:textColor="#616161"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/txtTaskRef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ref: #SR-2025-0012"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- Status Pill -->
                <TextView
                    android:id="@+id/txtStatusPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/rounded_status_bg"
                    android:contentDescription="Current status"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Waste & Transport Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="16dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waste and Transport Info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <!-- Waste Type -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Waste Type"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtWasteType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test37"
                    android:textColor="#212121"
                    android:padding="10dp"
                    android:background="@drawable/bg_field"/>

                <!-- Quantity -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test37"
                    android:textColor="#212121"
                    android:padding="10dp"
                    android:background="@drawable/bg_field"/>

                <!-- Origin / Destination -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Origin / Destination"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtOriginDestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test37 â†’ test37"
                    android:textColor="#212121"
                    android:padding="10dp"
                    android:background="@drawable/bg_field"/>

                <!-- Packaging -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Packaging"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtPackaging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test37"
                    android:textColor="#212121"
                    android:padding="10dp"
                    android:background="@drawable/bg_field"/>

                <!-- Special Instructions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Special Instructions"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/txtSpecialInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test37"
                    android:textColor="#212121"
                    android:padding="10dp"
                    android:background="@drawable/bg_field"/>

                <!-- Upload Collection Proof -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Collection Proof"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <!-- Attachment row: preview + add button (NO RecyclerView) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <!-- Preview thumbnail (first attachment) -->
                    <ImageView
                        android:id="@+id/imgAttachmentPreview"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_attachment"
                        android:contentDescription="Attachment preview"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_field"/>

                    <!-- Simple container for attachments (NO RecyclerView) -->
                    <LinearLayout
                        android:id="@+id/attachmentContainer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtNoAttachments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No attachments added"
                            android:textColor="#888888"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Upload button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#2ECC71"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Status Update -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Status"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="12dp"/>
                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/transporter_status_options"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveStatus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Save Status"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#1F3A4A"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="8dp"
                        app:strokeColor="#C0392B"
                        app:strokeWidth="1dp"
                        android:textColor="#C0392B"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
