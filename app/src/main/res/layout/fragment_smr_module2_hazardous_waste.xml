<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollModule2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:padding="16dp"
    tools:context=".view.businesses.smr.Module2HazardousWasteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#445B6C" />

        <!-- Card for Module 2 Header -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitleModule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 2: RA 6969 - Hazardous Waste"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitleModule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report on Chemical Control Orders and Hazardous Waste Generation"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Section A: CCO Report -->
                <TextView
                    android:id="@+id/tvSectionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. CCO Report (for each chemical/substance)"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCommonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Common Name / IUPAC / CAS Index Name"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCasNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CAS No."
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTradeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Trade Name"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section B: Hazardous Waste Generator -->
                <TextView
                    android:id="@+id/tvSectionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Hazardous Waste Generator"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <!-- HW No and HW Class row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHwNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="HW No."
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHwClass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="HW Class"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- HW Generated / Stored -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHwGenerated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity of HW Generated (this quarter)"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- HW Storage / Treatment / Disposal -->
                <TextView
                    android:id="@+id/tvSectionC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. Waste Storage, Treatment, and Disposal"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStorageMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Storage Method (On-site / Off-site)"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTransporter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Transporter Name"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTreater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Treater Name"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDisposalMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Disposal Method"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Add Waste Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddHazardousWaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Hazardous Waste Entry"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/SaveModule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Module"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <!-- Next Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextModule3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Water Pollution"
                    android:layout_marginTop="20dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
