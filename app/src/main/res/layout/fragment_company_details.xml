<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvCompanySubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Environmental Compliance Summary"
                    android:textSize="14sp"
                    android:textColor="@color/darker_gray" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="4dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvCncStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CNC Status: Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvPcoStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PCO Accreditation: Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvPtoExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PTO Expiry: Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tvDpExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discharge Permit Expiry: Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Overall Compliance Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvComplianceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Compliance: Loading..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvComplianceRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This companyâ€™s compliance status is being evaluated."
                    android:textSize="14sp"
                    android:textColor="@color/darker_gray"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
