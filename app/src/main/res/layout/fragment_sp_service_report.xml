<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp"
    tools:context=".view.serviceprovider.SP_ServiceReport">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¹ Top Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#34495E"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/backbtn"
                app:tint="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back Button" />

            <TextView
                android:id="@+id/txtHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Report"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- ðŸŸ¦ Company Details Card -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imgCompanyLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/dunkin"
                android:layout_marginEnd="12dp"
                android:background="@drawable/image_round_shape" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCompanyName"
                    android:text="Dunkin Donuts"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCompanyAddress"
                    android:text="A.S. Fortuna St, Mandaue City, Cebu"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ“‹ Report Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:background="#EAF2F8"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtServiceType"
                android:text="Service Type: Waste Disposal"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCompletionDate"
                android:text="Date Completed: Feb 12, 2025"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtRemarks"
                android:text="Remarks: Completed successfully without issues."
                android:textSize="15sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- ðŸ“‚ Attached File Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attached Document"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/fileContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#D6EAF8"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtFileName"
                android:text="Completion_Report.pdf"
                android:textColor="#1F3A4A"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDownload"
                android:text="Download File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#1F3A4A"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- ðŸŸ© Footer Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnShareReport"
                android:text="Share Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#27AE60"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnBackToList"
                android:text="Back to List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#C0392B"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
