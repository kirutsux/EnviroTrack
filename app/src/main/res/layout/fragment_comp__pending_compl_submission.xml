<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businesses.COMP_PendingComplSubmission"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu Icon"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack Logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />


        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notification Icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>


    <!-- Content Scrollable Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Status Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/progress_bar"
                android:text="Pending Compliance Submission"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp" />

            <!-- Gray Box Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/background_light"
                android:elevation="4dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Self-Monitoring\nReport for Q4 2024"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btnUploadReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload File"
                        android:backgroundTint="@color/card_background"
                        android:textColor="@color/card_text" />
                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Module 2: Waste\nManagement"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <Button
                        android:id="@+id/btnUploadWaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload File"
                        android:backgroundTint="@color/card_background"
                        android:textColor="@color/card_text" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginBottom="16dp" />

                <!-- Deadline Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@color/secondary_variant"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Saturday by 11:59pm\nSubmitting a file upload"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Nov 1 at 11:59pm - Nov 18 at 11:59pm"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitCompliance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Compliance"
                android:textColor="@color/button_text"
                android:backgroundTint="@color/button_primary"
                android:elevation="8dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
