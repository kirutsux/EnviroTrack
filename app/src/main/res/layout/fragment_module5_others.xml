<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollModule5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:padding="16dp"
    tools:context=".view.businesses.smr.Module5OthersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#445B6C" />

        <!-- Main Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card.Elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Module Header -->
                <TextView
                    android:id="@+id/tvTitleModule5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module 5: Others"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitleModule5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accidents, Emergency Records, and Personnel Training"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp" />

                <!-- Section A: Accidents & Emergency Records -->
                <TextView
                    android:id="@+id/tvSectionA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. Accidents and Emergency Records"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="12dp" />

                <!-- Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAccidentDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Area / Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAccidentArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Area / Location"
                        android:inputType="textCapWords" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Findings and Observation -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFindings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Findings and Observation"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Actions Taken -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Actions Taken"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remarks -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Remarks"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section B: Personnel/Staff Training -->
                <TextView
                    android:id="@+id/tvSectionB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. Personnel / Staff Training"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="20dp" />

                <!-- Date Conducted -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTrainingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date Conducted"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Course/Training Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTrainingDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course / Training Description"
                        android:inputType="textCapSentences" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- # of Personnel Trained -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPersonnelTrained"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="# of Personnel Trained"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveOthers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Module 5 Data"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next: Summary and Submit"
                    android:layout_marginTop="20dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/bg_white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
