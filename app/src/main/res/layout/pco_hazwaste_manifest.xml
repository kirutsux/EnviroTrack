<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".view.businesses.hwms.COMP_Hazwaste_Manifest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/title_hwms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hazardous Waste Management System"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:background="@drawable/bg_hwms_title"
            android:elevation="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:shadowColor="#66000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />


        <!-- Dashboard Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <!-- Reusable card button style -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_generator"
                style="@style/HWMSCardFancy"
                app:strokeWidth="2dp">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Generator Application" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_transporter"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Select Transporter" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_tsd"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Select TSD Facility" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_permit_transport"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Permit to Transport" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_payment_emb"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Payment to EMB" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_manifest_generator"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Generator Manifest" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_manifest_transporter"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="Transporter Manifest" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_manifest_tsd"
                style="@style/HWMSCardFancy">
                <TextView
                    style="@style/HWMSCardText"
                    android:text="TSD Manifest" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
