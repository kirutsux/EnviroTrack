<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient_purple_blue"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 🔹 Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_title_gradient"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- 🔙 Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/backbtn"
                android:contentDescription="Back Button"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <!-- 🪪 Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:text="Online Permitting and Monitoring Review"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Submitted Applications -->
        <TextView
            android:text="Submitted Applications"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_title_gradient"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 🔍 Search and Filter Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Search Box -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_search_field"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center_vertical"
                android:elevation="1dp">

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search"
                    app:tint="@color/black" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search applications..."
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darker_gray"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!-- Filter Spinner -->
            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="6dp"
                android:background="@drawable/bg_spinner_dark"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNoApplications"
            android:text="You have no submitted applications yet."
            android:textColor="#666"
            android:textSize="14sp"
            android:background="@drawable/text_border"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Applications List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerEmbOpmsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:overScrollMode="never"
            android:scrollbars="vertical" />
    </LinearLayout>
</ScrollView>
