<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.businesses.COMP_Module6">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="View notifications"
            android:layout_gravity="center_vertical"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Module Title -->
            <TextView
                android:id="@+id/moduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_primary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Module 6: Others"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Section Title -->
            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/info_box_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="Accidents and Emergency"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Date:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:focusable="false"
                android:clickable="true"
                android:hint="Select Date"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Area/Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Area/Location:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter area or location"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Findings and Observations -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Findings and Observations:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextFindings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:gravity="top|start"
                android:hint="Enter findings"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Action Taken -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Action Taken:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter actions taken"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Remarks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Remarks:"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/editTextRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:hint="Enter remarks"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Submit Report"
                android:backgroundTint="@color/button_primary"
                app:cornerRadius="8dp"
                android:padding="12dp"
                android:contentDescription="Submit report button" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
