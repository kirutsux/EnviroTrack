<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple_blue"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¹ Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_title_gradient"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- ðŸ”™ Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/backbtn"
                android:contentDescription="Back Button"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <!-- ðŸªª Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:text="Online Permitting and Monitoring"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="Select which permit you want to apply for:"
            android:textSize="14sp"
            android:textColor="#555"
            android:background="@drawable/text_border"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Permit Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnApplyDischargePermit"
                android:text="Apply for Discharge Permit"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnApplyPto"
                android:text="Apply for Permit to Operate (PTO)"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />
        </LinearLayout>

        <!-- Submitted Applications -->
        <TextView
            android:text="Your Submitted Applications"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_title_gradient"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtNoApplications"
            android:text="You have no submitted applications yet."
            android:textColor="#666"
            android:textSize="14sp"
            android:background="@drawable/text_border"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Applications List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSubmittedApplications"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:overScrollMode="never"
            android:scrollbars="vertical" />
    </LinearLayout>
</ScrollView>
