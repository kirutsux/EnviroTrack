<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".view.businesses.COMP_Review_Waste_Management">

    <!-- Standard Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Open menu"
            android:layout_gravity="center_vertical"
            app:tint="@android:color/white" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/logoss"
            android:contentDescription="EnviroTrack logo"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="View notifications"
            android:layout_gravity="center_vertical"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Section Header -->
        <TextView
            android:id="@+id/tvReviewWasteManagementHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Review Waste Management"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/background_redish"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReviewWaste"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:background="@color/card_background"
            app:layout_constraintTop_toBottomOf="@id/tvReviewWasteManagementHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate Manifest"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:paddingBottom="12dp"/>

                <!-- Total Waste Generated -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_header_gray"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Waste Generated:"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotalWasteGenerated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 kg"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Waste Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_header_gray"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waste Type:"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvWasteType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chemical"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Waste Disposed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_header_gray"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waste Disposed:"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvWasteDisposed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450 kg"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Recent Entries -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_header_gray"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Entries:"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvRecentEntries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-Nov-2024: 50 kg Chemical (Subelite)"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirmReviewWaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:background="@drawable/status_chip"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardReviewWaste"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
