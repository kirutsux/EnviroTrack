<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <!-- Circular Logo/Image -->
    <ImageView
        android:id="@+id/notif_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/crs"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:clipToOutline="true" />

    <!-- Notification content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/notif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dunkin Donuts Submitted an application for..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/notif_details_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document Details"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Time indicator -->
    <TextView
        android:id="@+id/notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active: 8:00am"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp" />

</LinearLayout>
