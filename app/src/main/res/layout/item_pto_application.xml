<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCnc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="6dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/PermitType"
                android:text="Permit Type"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- STATUS BADGE -->
            <TextView
                android:id="@+id/tvStatus"
                android:text="Pending"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_status_badge"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEstablishmentName"
            android:text="Establishment Name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOwnerName"
            android:text="Owner Name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPlantAddress"
            android:text="Plant Address"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDateSubmitted"
            android:text="Submitted: October 18, 2025"
            android:textSize="13sp"
            android:textColor="@color/darker_gray"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvIssueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issued: -"
            android:textSize="12sp"
            android:textColor="#555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Expires: -"
            android:textSize="12sp"
            android:textColor="#555"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
