<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/very_light_gray"
    app:cardBackgroundColor="@color/card_light_bg"
    app:rippleColor="#1A000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header: Company & Status -->
        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Entech"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            tools:text="Entech" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:background="@drawable/status_background"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tvCompany"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Pending" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/tvCompany"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Rows -->
        <!-- Waste Type -->
        <ImageView
            android:id="@+id/iconWasteType"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_waste"
            app:tint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvWasteType" />

        <TextView
            android:id="@+id/tvWasteType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Waste Type: Chemical"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toEndOf="@id/iconWasteType"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Waste Type: Chemical" />

        <!-- Origin -->
        <ImageView
            android:id="@+id/iconOrigin"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_location"
            app:tint="@color/gray"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvWasteType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvOrigin" />

        <TextView
            android:id="@+id/tvOrigin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Origin: Pasig City"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvWasteType"
            app:layout_constraintStart_toEndOf="@id/iconOrigin"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Origin: Pasig City" />

        <!-- Destination -->
        <ImageView
            android:id="@+id/iconDestination"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_destination"
            app:tint="@color/gray"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrigin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvDestination" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Destination: Cavite"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrigin"
            app:layout_constraintStart_toEndOf="@id/iconDestination"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Destination: Cavite" />

        <!-- Quantity -->
        <ImageView
            android:id="@+id/iconQuantity"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_quantity"
            app:tint="@color/gray"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvDestination"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvQuantity" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity: 15 drums"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvDestination"
            app:layout_constraintStart_toEndOf="@id/iconQuantity"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Quantity: 15 drums" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvDateBooked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Booked: Oct 25, 2025"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:fontFamily="sans-serif"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Booked: Oct 25, 2025" />

        <!-- Quick Chat Section -->
        <LinearLayout
            android:id="@+id/chatBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_chatbar"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvDateBooked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iconChat"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_chat_outline"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray" />

            <EditText
                android:id="@+id/etQuickMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Chat with requester..."
                android:background="@android:color/transparent"
                android:textSize="13sp"
                android:imeOptions="actionSend"
                android:inputType="textCapSentences"
                android:paddingVertical="4dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/gray" />

            <ImageButton
                android:id="@+id/btnSendQuick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
