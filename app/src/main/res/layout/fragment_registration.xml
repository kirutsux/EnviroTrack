<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wavegreenish"
    android:padding="16dp"
    tools:context=".RegistrationFragment">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbtn"
        android:contentDescription="Back"
        android:padding="4dp"
        android:layout_marginBottom="8dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_gravity="center"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- User Type Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register As"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spUserType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:prompt="@string/select_prompt"
        android:entries="@array/register_as_options"/>

    <!-- Email Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Email"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/black"
            android:background="@null"/>
    </LinearLayout>

    <!-- First Name Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/black"
            android:background="@null"/>
    </LinearLayout>

    <!-- Last Name Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/black"
            android:background="@null"/>
    </LinearLayout>

    <!-- Password Input & Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/black"
            android:background="@null"/>

        <ImageView
            android:id="@+id/showPassword1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_visibility_off"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Confirm Password Input & Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_field"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="@color/text_secondary"
            android:textColor="@color/black"
            android:background="@null"/>

        <ImageView
            android:id="@+id/showPassword2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_visibility_off"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Gender Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_selector"
            android:text="Male"
            android:textColor="@color/black"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_selector"
            android:text="Female"
            android:textColor="@color/black"
            android:button="@null"
            android:layout_marginStart="8dp"/>
    </RadioGroup>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign up"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <!-- Login Link -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:textSize="14sp"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
