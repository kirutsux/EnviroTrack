<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:id="@+id/tvProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E" />

        <!-- Company Name -->
        <TextView
            android:id="@+id/tvProviderCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EcoTrans Logistics"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <!-- Type -->
        <TextView
            android:id="@+id/tvProviderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Transporter"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Contact Number -->
        <TextView
            android:id="@+id/tvProviderContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: +639123456789"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvProviderEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: eco@transporter.com"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tvProviderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Manila City"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Book Appointment Button -->
        <Button
            android:id="@+id/btnBookProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textAllCaps="false"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:paddingVertical="6dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
