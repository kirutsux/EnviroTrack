<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Provider Name -->
        <TextView
            android:id="@+id/tvProviderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <!-- Company Name -->
        <TextView
            android:id="@+id/tvProviderCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EcoTrans Logistics"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginTop="2dp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="6dp" />

        <!-- Details Section -->
        <TextView
            android:id="@+id/tvProviderType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Transporter"
            android:textColor="#616161"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvProviderContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: +639123456789"
            android:textColor="#616161"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvProviderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: eco@transporter.com"
            android:textColor="#616161"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvProviderAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Manila City"
            android:textColor="#616161"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            style="?attr/materialButtonOutlinedStyle"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#00897B"
            android:textColor="#00897B" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
