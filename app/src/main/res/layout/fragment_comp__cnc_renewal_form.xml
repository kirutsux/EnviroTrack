<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNC Renewal Form"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/header_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- CNC Certificate Number -->
        <TextView android:text="CNC Certificate Number"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="text" />

        <!-- Original Issuance Date -->
        <TextView android:text="Original Issuance Date"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editOriginalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:focusable="false"
                android:paddingEnd="40dp"
                android:inputType="none"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_calendar"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Date"/>
        </RelativeLayout>

        <!-- Current Expiration Date -->
        <TextView android:text="Current Expiration Date"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editExpirationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:focusable="false"
                android:paddingEnd="40dp"
                android:inputType="none"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_calendar"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Date"/>
        </RelativeLayout>

        <!-- Previous Renewal Date -->
        <TextView android:text="Previous Renewal Date"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editPreviousDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_field"
                android:focusable="false"
                android:paddingEnd="40dp"
                android:inputType="none"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_calendar"
                android:background="@android:color/transparent"
                android:contentDescription="Pick Date"/>
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Company Name -->
        <TextView android:text="Company Name"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Auto-filled from registration, editable if necessary"
            android:background="@drawable/input_field"
            android:inputType="text" />

        <!-- Business Address -->
        <TextView android:text="Business Address"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="text" />

        <!-- Industry Type -->
        <TextView android:text="Industry Type"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field" />

        <!-- Contact Person -->
        <TextView android:text="Contact Person"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="textPersonName" />

        <!-- Contact Email -->
        <TextView android:text="Contact Email"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="textEmailAddress" />

        <!-- Contact Phone Number -->
        <TextView android:text="Contact Phone Number"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_field"
            android:inputType="phone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Save Draft"
                android:backgroundTint="@color/gray" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Submit Renewal"
                android:backgroundTint="@color/button_primary"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
