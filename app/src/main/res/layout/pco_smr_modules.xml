<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ecocp.capstoneenvirotrack.view.all.COMP_Modules">

    <!-- ðŸ”¹ Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/backbtn"
            android:contentDescription="@string/back_button_description"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/titleCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modules_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_title_gradient"
                android:gravity="center"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Modules" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Scrollable List of Module Cards -->
    <ScrollView
        android:id="@+id/scrollModules"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Module 1 -->
            <LinearLayout
                android:id="@+id/module1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module1_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 1: General Information" />

                <ProgressBar
                    android:id="@+id/module1Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module1ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module1_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

            <!-- Module 2 -->
            <LinearLayout
                android:id="@+id/module2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module2_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 2: RA 6969" />

                <ProgressBar
                    android:id="@+id/module2Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module2ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module2_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

            <!-- Module 3 -->
            <LinearLayout
                android:id="@+id/module3Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module3_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 3: RA 9275" />

                <ProgressBar
                    android:id="@+id/module3Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module3ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module3_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

            <!-- Module 4 -->
            <LinearLayout
                android:id="@+id/module4Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module4_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 4: RA 8749" />

                <ProgressBar
                    android:id="@+id/module4Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module4ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module4_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

            <!-- Module 5 -->
            <LinearLayout
                android:id="@+id/module5Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module5Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module5_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 5: PD 1586" />

                <ProgressBar
                    android:id="@+id/module5Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module5ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module5_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

            <!-- Module 6 -->
            <LinearLayout
                android:id="@+id/module6Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/module_card_bg"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/module6Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module6_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Module 6: Others" />

                <ProgressBar
                    android:id="@+id/module6Progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="@color/progress_bar"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/module6ProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/module6_progress"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="40%" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>