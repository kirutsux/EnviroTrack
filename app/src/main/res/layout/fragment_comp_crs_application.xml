            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_info_section"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:contentDescription="@string/company_info_section_description"
            tools:text="A. Company Information" />

        <!-- ðŸ§© A. Company Information -->
