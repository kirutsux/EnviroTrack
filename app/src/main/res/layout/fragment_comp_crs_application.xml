            android:textColor="#445B6C"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:contentDescription="@string/contact_details_section_description"
            tools:text="E. Contact Details" />

        <!-- â˜Žï¸ E. Contact Details -->
