            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_registration_subheader"
            android:textSize="14sp"
            android:textColor="#555"
            android:background="@drawable/text_border"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/company_registration_subheader_description"
            tools:text="Please fill out all required fields accurately before submitting your company registration." />

        <TextView
