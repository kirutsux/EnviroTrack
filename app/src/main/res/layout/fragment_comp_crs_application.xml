            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etWebsite_layout"
                style="@style/TextInputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/website_hint"
                app:boxStrokeColor="@color/input_field_border"
                app:hintTextColor="@color/text_secondary"
                app:boxBackgroundColor="@color/input_field_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWebsite"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:padding="12dp"
                    android:contentDescription="@string/website_description"
                    tools:text="https://example.com" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
