                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/company_type_hint"
                app:boxStrokeColor="@color/input_field_border"
                app:hintTextColor="@color/text_secondary"
                app:boxBackgroundColor="@color/input_field_background">

                <AutoCompleteTextView
                    android:id="@+id/etCompanyType"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:padding="12dp"
                    android:dropDownSelector="@color/input_field_background"
                    android:contentDescription="@string/company_type_description"
                    tools:text="Corporation" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etTinNumber_layout"
