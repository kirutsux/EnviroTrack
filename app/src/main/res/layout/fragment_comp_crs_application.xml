            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etCompanyName_layout"
                style="@style/TextInputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/company_name_hint"
                app:boxStrokeColor="@color/input_field_border"
                app:hintTextColor="@color/text_secondary"
                app:boxBackgroundColor="@color/input_field_background">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyName"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:padding="12dp"
                    android:contentDescription="@string/company_name_description"
                    tools:text="Example Corp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etCompanyType_layout"
