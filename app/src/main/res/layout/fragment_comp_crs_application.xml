            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attachments_section"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#445B6C"
            android:background="@drawable/text_border_green"
            android:padding="8dp"
            android:contentDescription="@string/attachments_section_description"
            tools:text="G. Attachments / Uploads" />

        <!-- ðŸ“Ž G. Attachments / Uploads -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/attachments_info"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:contentDescription="@string/attachments_info_description"
