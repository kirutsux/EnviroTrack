<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/genAppRoot"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvStepsTitle"
        android:text="Generator Application (Step 1 of 5)"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <ViewFlipper
        android:id="@+id/viewFlipperSteps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- STEP 1: BASIC INFO -->
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                    android:text="Step 1 — Basic Information"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etCompany"
                    android:hint="Company"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etManagingHead"
                    android:hint="Managing Head"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etEstablishmentName"
                    android:hint="Name of Establishment"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etMobileNumber"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etNatureOfBusiness"
                    android:hint="Nature of Business"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPsicNumber"
                    android:hint="PSIC Number"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etDateEstablished"
                    android:hint="Date of Establishment (YYYY-MM-DD)"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etNoEmployees"
                    android:hint="No. of Employees"
                    android:inputType="number"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Pollution Control Officer (PCO) Info"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPcoName"
                    android:hint="PCO Name"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPcoMobile"
                    android:hint="PCO Mobile Number"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPcoTel"
                    android:hint="PCO Telephone Number"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPcoAccredNo"
                    android:hint="PCO Accreditation Number"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <EditText
                    android:id="@+id/etPcoAccredDate"
                    android:hint="PCO Date of Accreditation (YYYY-MM-DD)"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>

            </LinearLayout>
        </ScrollView>

        <!-- STEP 2: ENVIRONMENTAL COMPLIANCE PERMITS (dynamic list) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Step 2 — Environmental Compliance Permits"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/llPermitsContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/btnAddPermit"
                    android:text="Add Permit"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:text="(Fill permit type, ID, date issued, expiry, place of issuance)"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <!-- STEP 3: PRODUCTS & SERVICES (optional) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Step 3 — Product and Service Information (Optional)"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/llProductsContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/btnAddProduct"
                    android:text="Add Product/Service"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:text="(Optional: product name + service description)"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <!-- STEP 4: HAZARDOUS WASTE PROFILE (dynamic) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Step 4 — Hazardous Waste Profile"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/llWastesContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <Button
                    android:id="@+id/btnAddWaste"
                    android:text="Add Waste Profile"
                    android:layout_marginTop="8dp"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:text="(Waste name, nature, catalogue, details, current practice)"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </ScrollView>

        <!-- STEP 5: UPLOAD REQUIRED DOCUMENTS & FINALIZE -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Step 5 — Upload Required Documents"
                    android:textStyle="bold"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:text="Required (asterisk):"
                    android:layout_marginTop="8dp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <LinearLayout
                    android:id="@+id/llRequiredDocs"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:text="Accepted types: pdf, jpg, png, gif. Max file size: 20MB"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:layout_height="20dp"
                    android:layout_width="match_parent"/>
                <Button
                    android:id="@+id/btnFinalize"
                    android:text="Finalize and Submit Application"
                    android:layout_marginTop="16dp"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </ScrollView>

    </ViewFlipper>

    <!-- bottom navigation for internal steps -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">
        <Button
            android:id="@+id/btnBackStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
        <View
            android:layout_width="24dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"/>
    </LinearLayout>

</LinearLayout>
