<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="16dp"
    tools:context=".view.serviceprovider.SP_ServiceRequestDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top title -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:background="#1F3A4A"
            android:text="Service Request Details"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Info card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Top row: avatar + company name + status -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgCompanyLogo"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/avatar"
                        android:contentDescription="Company logo"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_bg"
                        android:padding="4dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtCompanyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:id="@+id/txtServiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Type · Hazardous Waste Pickup"
                            android:textSize="13sp"
                            android:textColor="#616161"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Status pill -->
                    <TextView
                        android:id="@+id/txtStatusPill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Pending"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:backgroundTint="#F39C12"
                        android:background="@drawable/rounded_status_bg"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Request status" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Info rows -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Booking ID (hidden) -->
                    <TextView
                        android:id="@+id/txtBookingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <!-- Location -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#757575"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="123 Sample St., Barangay, City"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Date requested -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Requested"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtDateRequested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="Nov 19, 2025 10:30 AM"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Contact person -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtContactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="Juan Dela Cruz — (0917) 123-4567"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- WASTE DETAILS: waste type / qty / packaging -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waste type"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtWasteType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="B201 - Sulfuric acid"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="150 liters"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Packaging"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtPackaging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="Sealed drums"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Destination -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destination"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="TSD Facility - Demo"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Amount -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount (PHP)"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="5,000.00"
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Special handling instructions -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Special handling instructions"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtSpecialInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="10dp"
                        android:text="Handle with acid-rated PPE. Keep upright."
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"/>

                    <!-- Attachments -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attachments"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:id="@+id/icAttachment"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_attachment"
                            android:contentDescription="Attachment icon" />

                        <TextView
                            android:id="@+id/txtAttachments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="No attachments"
                            android:textColor="#616161"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtUploadTransportPlanStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transport Plan: Not uploaded"
                        android:textColor="#616161"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/txtUploadStoragePermitStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Storage Permit: Not uploaded"
                        android:textColor="#616161"
                        android:layout_marginTop="4dp"/>

                    <!-- TSD-only action buttons (hidden by default) -->
                    <LinearLayout
                        android:id="@+id/tsdActionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUploadCertificate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Certificate"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button"
                            app:cornerRadius="8dp"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUploadPreviousRecord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Previous Record"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:cornerRadius="8dp"
                            app:strokeColor="#1976D2"
                            app:strokeWidth="1dp"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUpdateStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Update Status"
                            android:textAllCaps="false"
                            style="@style/Widget.MaterialComponents.Button"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#1565C0"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="4dp"/>
                    </LinearLayout>

                    <!-- Notes / Instructions -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notes / Instructions"
                        android:textColor="#757575"
                        android:textSize="12sp"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_field"
                        android:padding="12dp"
                        android:text="Please bring proper PPE. Gate codes are at the reception."
                        android:textColor="#212121"
                        android:layout_marginTop="6dp"
                        android:minHeight="72dp"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="8dp"
                app:backgroundTint="#27AE60"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:contentDescription="Accept request"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp"
                app:strokeColor="#C0392B"
                app:strokeWidth="1dp"
                android:textColor="#C0392B"
                android:layout_marginStart="8dp"
                android:contentDescription="Reject request"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
