<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".view.serviceprovider.SP_Servicerequest">

    <!-- ðŸ”¹ EnviroTrack Top Header -->
    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#34495E"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            app:tint="#FFFFFF"
            android:contentDescription="Menu" />

        <!-- Notification Bell -->
        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notifications"
            app:tint="#FFFFFF"
            android:contentDescription="Notifications" />

        <!-- Logo and Title Section -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:contentDescription="EnviroTrack Logo"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EnviroTrack"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center" />


        </LinearLayout>
    </RelativeLayout>

    <!-- ðŸ”¹ Blue Title Bar -->
    <View
        android:id="@+id/subTitleBar"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="#1F3A4A"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Requests Management"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/subTitleBar"
        app:layout_constraintBottom_toBottomOf="@id/subTitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- ðŸ”¹ Inner Content (Spinner + RecyclerView) -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subTitleBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header (Sort Bar) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Requests Overview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinnerSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/sort_options"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:background="@drawable/spinner_background" />
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRequests"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
