<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Loading Overlay -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/teal_700"
        app:indicatorSize="72dp"
        app:trackThickness="6dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Permit to Transport (PTT)Application"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 1. Generator Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGenerator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="18dp">

                    <ImageView
                        android:id="@+id/iconGenerator"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_factory"
                        app:tint="@color/teal_700"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Approved Hazardous Waste Generator"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/iconGenerator"
                        app:layout_constraintTop_toTopOf="@id/iconGenerator"
                        app:layout_constraintBottom_toBottomOf="@id/iconGenerator" />

                    <TextView
                        android:id="@+id/tvSelectedGenerator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tap to select generator"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/iconGenerator"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnSelectGenerator" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectGenerator"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textEnd"
                        app:strokeColor="@color/teal_700"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSelectedGenerator"
                        app:layout_constraintBottom_toBottomOf="@id/tvSelectedGenerator" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2. Transport Booking Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTransportBooking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/cardGenerator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="18dp">

                    <ImageView
                        android:id="@+id/iconTransport"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_truck"
                        app:tint="@color/orange_submitted"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Confirmed Transporter Booking"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/iconTransport"
                        app:layout_constraintTop_toTopOf="@id/iconTransport"
                        app:layout_constraintBottom_toBottomOf="@id/iconTransport" />

                    <TextView
                        android:id="@+id/tvSelectedTransportBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tap to select transport booking"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/iconTransport"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnSelectTransportBooking" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectTransportBooking"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textEnd"
                        app:strokeColor="@color/orange_submitted"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSelectedTransportBooking"
                        app:layout_constraintBottom_toBottomOf="@id/tvSelectedTransportBooking" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. TSD Booking Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTsdBooking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/cardTransportBooking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp">

                    <ImageView
                        android:id="@+id/iconTsd"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_recycle"
                        app:tint="@color/card_green_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Confirmed TSD Facility Booking"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="14dp"
                        app:layout_constraintStart_toEndOf="@id/iconTsd"
                        app:layout_constraintTop_toTopOf="@id/iconTsd"
                        app:layout_constraintBottom_toBottomOf="@id/iconTsd" />

                    <TextView
                        android:id="@+id/tvSelectedTsdBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tap to select TSD facility"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/iconTsd"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnSelectTsdBooking" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectTsdBooking"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textEnd"
                        app:strokeColor="@color/card_green_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvSelectedTsdBooking"
                        app:layout_constraintBottom_toBottomOf="@id/tvSelectedTsdBooking" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Section Title -->
            <TextView
                android:id="@+id/tvUploadTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Upload Required Documents"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardTsdBooking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Generator Certificate -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilGenCert"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tvUploadTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGenCert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:textColor="@color/text_primary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadGenCert"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose PDF"
                app:icon="@drawable/ic_upload"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/tilGenCert"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Transport Plan -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTransportPlan"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/btnUploadGenCert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTransportPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No file selected"
                    android:textSize="15sp"
                    android:enabled="false"
                    android:textColor="@color/text_primary" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadTransportPlan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose PDF"
                app:icon="@drawable/ic_upload"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/tilTransportPlan"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Remarks -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRemarks"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="24dp"
                app:hintEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/btnUploadTransportPlan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Additional Remarks (Optional)"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:maxLines="6"
                    android:scrollbars="vertical" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitPTT"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Submit PTT Application"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:enabled="false"
                android:alpha="0.5"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@id/tilRemarks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>