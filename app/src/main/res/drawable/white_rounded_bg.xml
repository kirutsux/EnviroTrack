<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (subtle ripple-like darker overlay) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
            <size android:width="0dp" android:height="0dp" />
            <bitmap android:src="@android:color/darker_gray" android:tileMode="disabled" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- subtle vertical gradient to give a light card feel -->
            <gradient
                android:angle="270"
                android:startColor="#FFFFFFFF"
                android:centerColor="#FEFEFF"
                android:endColor="#FFFDFDFD" />

            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#E6E6E6" />
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
        </shape>
    </item>

</selector>
