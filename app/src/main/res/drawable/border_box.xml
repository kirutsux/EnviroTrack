<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#D3D3D3"/> <!-- Light shadow color -->
        </shape>
    </item>

    <!-- Border and Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#FFFFFF"/> <!-- White Background -->
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- Blue Border -->
        </shape>
    </item>

</layer-list>
