<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FCF9EA" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="#C0B283" /> <!-- subtle brown-gold accent -->

    <!-- Optional padding inside the shape -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
