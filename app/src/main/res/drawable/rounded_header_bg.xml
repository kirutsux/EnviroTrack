<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#7BA07C" /> <!-- Change to your desired header color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#388E3C" />

</shape>
