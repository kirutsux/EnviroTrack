            app:destination="@id/COMP_CRSApplication" />
    </fragment>

    <fragment
        android:id="@+id/COMP_CRSApplication"
        android:name="com.ecocp.capstoneenvirotrack.view.businesses.crs.COMP_CRSApplication"
