<resources>
    <!-- Primary Button Style -->
    <style name="PrimaryButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="OutlinedButton">
        <item name="android:background">@drawable/outlined_button</item>
        <item name="android:textColor">@color/primary_container</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Input Field -->
    <style name="InputField">
        <item name="android:background">@drawable/input_field</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Google Button -->
    <style name="GoogleButton">
        <item name="android:background">@drawable/google_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="OtpBox" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Form Label -->
    <style name="FormLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Compact Primary Button (Custom Style) -->
    <style name="CompactPrimaryButton" parent="@style/PrimaryButton">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

    <!-- Italic version -->
    <style name="FormLabel.Italic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/input_field_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxBackgroundColor">@color/input_field_background</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <!-- Optional: matching hint text style -->
    <style name="TextInputHint" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileOptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
